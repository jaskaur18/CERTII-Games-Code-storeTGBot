{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2016"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "incremental": true,
    "allowJs": true,
    "paths": {
      "@/*": ["*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
